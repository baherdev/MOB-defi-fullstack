# Environment variables for MOB Routing Application

# Database Configuration
MYSQL_ROOT_PASSWORD=root
MYSQL_USER=mob_user
MYSQL_PASSWORD=mob_password
MYSQL_DATABASE=mob_routing

# Symfony Configuration
APP_ENV=dev
APP_SECRET=change-this-secret-in-production-min-32-chars

# Database URL (for Symfony)
DATABASE_URL=mysql://mob_user:mob_password@database:3306/mob_routing?serverVersion=8.0

# JWT Configuration (will be auto-generated if empty)
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=

# Frontend API URL
VITE_API_BASE_URL=http://localhost:8000/api/v1
